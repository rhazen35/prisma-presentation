{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "Node",
    "typeRoots": [
      "node_modules/.prisma",
      "./node_modules/@types"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "src/**/*.ts",
  ]
}
