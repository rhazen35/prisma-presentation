{
    "root": true,
    "ignorePatterns": [
        "*.js",
        "prisma/generated/**/*"
    ],
    "overrides": [
        {
            "files": [
                "*.ts"
            ],
            "parserOptions": {
                "project": [
                    "tsconfig.json"
                ],
                "createDefaultProgram": true
            },
            "rules": {
                "no-unused-vars": "off",
                "@typescript-eslint/no-unused-vars": [
                    "warn",
                    {
                        "argsIgnorePattern": "^_",
                        "varsIgnorePattern": "^_",
                        "caughtErrorsIgnorePattern": "^_"
                    }
                ],
                "arrow-body-style": 0,
                "@typescript-eslint/semi": [
                    "error",
                    "never"
                ],
                "@typescript-eslint/consistent-type-imports": [
                    "error",
                    {
                        "prefer": "type-imports",
                        "disallowTypeAnnotations": true
                    }
                ],
                "@typescript-eslint/member-delimiter-style": ["error", {
                    "multiline": {
                        "delimiter": "none"
                    },
                    "singleline": {
                        "delimiter": "semi",
                        "requireLast": false
                    },
                    "multilineDetection": "brackets"
                }]
            }
        }
    ]
}
